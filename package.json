{
  "name": "educational-management-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "powershell -File scripts/start-frontend-absolute.ps1",
    "start:backend": "powershell -File scripts/start-backend-absolute.ps1",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "install:all": "powershell -File scripts/install-all.ps1",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force node_modules, frontend/node_modules, backend/node_modules -ErrorAction SilentlyContinue\"",
    "test": "npm run test:frontend",
    "test:frontend": "powershell -Command \"Set-Location frontend; npm test\"",
    "start:win": "powershell -Command \"Start-Process powershell -ArgumentList '-Command', 'cd backend; node simple-server.js' -WindowStyle Minimized; Start-Process powershell -ArgumentList '-Command', 'cd frontend; npm start' -WindowStyle Minimized\"",
    "start:backend:win": "powershell -Command \"cd backend; node simple-server.js\"",
    "start:frontend:win": "powershell -Command \"cd frontend; npm start\""
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}